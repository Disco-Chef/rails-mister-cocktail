<%= simple_form_for [@cocktail, @dose] do |f| %>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.association :ingredient,  collection: Ingredient.all %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
